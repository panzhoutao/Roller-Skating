<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/act_item">
    <LinearLayout
        android:id="@+id/act_item_ll"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/act_item_pic"
            android:scaleType="fitXY"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/logo"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/act_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动标题"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/act_item_timetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动时间："
                android:textSize="13sp"
                android:layout_below="@id/act_item_title"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/act_item_time"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016年9月19日 11:15"
                android:textSize="13sp"
                android:layout_below="@id/act_item_title"
                android:layout_toRightOf="@id/act_item_timetv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地       址："
                android:textSize="13sp"
                android:layout_below="@id/act_item_timetv"
                android:layout_marginTop="5dp"
                android:id="@+id/textView" />
            <TextView
                android:id="@+id/act_item_address"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="北京市"
                android:textSize="13sp"
                android:layout_alignTop="@+id/textView"
                android:layout_toEndOf="@+id/textView" />
            <TextView
                android:id="@+id/act_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.00km"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/act_item_address"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_location"
                android:layout_toLeftOf="@id/act_item_distance"
                android:layout_alignBottom="@id/act_item_address"
                android:layout_marginRight="2dp"
                android:id="@+id/imageView" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/act_item_ll"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态："/>
        <TextView
            android:id="@+id/act_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可以参加" />
    </LinearLayout>


</RelativeLayout>
