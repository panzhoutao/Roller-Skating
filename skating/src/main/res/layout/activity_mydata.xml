<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_mydata_main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00bcd4"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="18sp"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fbf7f7"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/act_mydata_head"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>
            <com.pan.skating.view.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/act_mydata_head1"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/myhand" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forward"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a5a5a5" />
        <LinearLayout
            android:id="@+id/act_mydata_name"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/act_mydata_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="昵称"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:layout_marginRight="25dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:src="@drawable/write"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a5a5a5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>

            <RadioGroup
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginRight="30dp">
                <RadioButton
                    android:id="@+id/man"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textSize="16sp"/>
                <RadioButton
                    android:id="@+id/women"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="16sp"/>

            </RadioGroup>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a5a5a5" />
        <LinearLayout
            android:id="@+id/act_mydata_city"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/act_mydata_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请选择"
                android:textSize="16dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forward"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a5a5a5" />
        <LinearLayout
            android:id="@+id/act_mydata_date"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生日期"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/act_mydata_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请选择"
                android:textSize="16dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forward"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a5a5a5" />
        <LinearLayout
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名："
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp" />
            <EditText
                android:id="@+id/act_mydata_sign"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="请填写介绍"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a5a5a5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="30dp"
            android:gravity="center">
            <Button
                android:id="@+id/act_mydata_commit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="提交"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:background="@drawable/button"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
