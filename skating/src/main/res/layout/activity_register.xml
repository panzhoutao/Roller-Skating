<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00bcd4"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/act_register_back"
            android:layout_weight="1"
            android:src="@drawable/back"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="18sp"
            android:layout_weight="10"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_user"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/act_register_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入用户名"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_phone"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/act_register_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入手机号"
            android:phoneNumber="true"
            android:singleLine="true"
            android:maxLength="11" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_message"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/act_register_code"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="请输入验证码"
            android:singleLine="true"
            android:maxLength="6"
            android:numeric="integer"/>
        <Button
            android:id="@+id/act_register_getcode"
            android:layout_width="120dp"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:layout_gravity="right"
            android:background="@drawable/buttoncircle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_phone"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/act_register_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/act_register_register"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="15dp"
        android:text="注册"
        android:background="@drawable/buttoncircle"
        android:textSize="18sp"
        android:clickable="true"/>

</LinearLayout>
